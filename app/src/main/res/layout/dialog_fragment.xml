<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fg_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/diagfrag_bg"
        android:minWidth="260dp">

        <ImageView
            android:id="@+id/diag_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/dialog_close" />

        <ImageView
            android:id="@+id/match_one"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/diag_dp" />

        <ImageView
            android:id="@+id/match_two"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/diag_dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/diag_msg_btn"
            android:layout_width="176dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130dp"
            android:fontFamily="@font/questrial"
            android:text="Send a message"
            android:textAllCaps="false"
            android:textColor="#503499"
            app:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            app:rippleColor="#D0BEFF"
            app:strokeColor="#503499"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playin_btn"
            android:layout_width="176dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/questrial"
            android:text="Keep playing"
            android:textAllCaps="false"
            android:textColor="#503499"
            app:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            app:rippleColor="#D0BEFF"
            app:strokeColor="#503499"
            app:strokeWidth="1dp" />


    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>