<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fg_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/diagfrag_bg"
        android:minWidth="260dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/match_one"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="50dp"
            android:scaleType="centerInside"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/diag_dp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/match_two"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:scaleType="centerInside"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/diag_dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/diag_msg_btn"
            style="@style/Dialog.UnelevatedButton"
            android:layout_width="176dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130dp"
            android:text="Send a message" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playin_btn"
            style="@style/Dialog.UnelevatedButton"
            android:layout_width="176dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="Keep playing" />


    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>